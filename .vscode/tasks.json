{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cpp debug build",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-O0",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "focus editor",
            "type": "shell",
            "command": "workbench.action.focusActiveEditorGroup",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        }
    ]
}
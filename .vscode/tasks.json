{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cpp debug build",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-O0",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
    ]
}